# Mode de fonctionnement: true pour mode offline (config.json), false pour Google Sheets
OFFLINE_MODE=true

# Configuration fichier local (mode offline)
CONFIG_FILE_PATH=/app/config.json

# Google Sheets Configuration (mode online uniquement)
GOOGLE_SPREADSHEET_ID=
GOOGLE_SHEET_RANGE=Sheet1!A1:C100
GOOGLE_CREDENTIALS_PATH=/app/credentials/credentials.json

# Database
DATABASE_PATH=/app/data/jeece.db

# Update interval (in minutes)
UPDATE_INTERVAL_MINUTES=15

# Flask
FLASK_ENV=production
